<h1>Ingredients</h1>
<div class="form-group">
    <h1>Add Ingredient</h1>
    <%= form_for [@recipe, @ingredients], method: :post do |f| %>
        <div class="mt-3">
            <label class="float-left"> <%= f.label 'unit' %> </label>
            <%= f.select :unit, unit_options_for_ingredients, {}, { class: 'form-control', placeholder: 'unit' } %>
        </div>
        <div class="mt-3">
            <label class="float-left"> <%= f.label 'amount' %> </label>
            <%= f.text_field :amount, class: 'form-control' %>
        </div>
        <%= f.hidden_field :recipe_id, value: @recipe.id %>
        <div class="form-group mt-3">
            <%= f.submit %>
        </div>
    <% end %>
</div>