<%= link_to 'Show All Recipes', recipes_path %>
<%= form_for @recipe do |f| %>
    <div class="mt-3">
        <label class="float-left"> <%= f.label 'title' %> </label>
        <%= f.text_field :title, class: 'form-control', placeholder: 'title' %>
    </div>
   
    <div class="mt-3">
        <label class="float-left"> <%= f.label 'descriptions' %> </label>
        <%= f.text_area :descriptions, class: 'form-control', placeholder: 'descriptions', size: "60x10" %>
    </div>

    <div class="mt-3">
        <label class="float-left"> <%= f.label 'time' %> </label>
        <%= f.text_field :time, class: 'form-control', placeholder: 'time' %>
    </div>

    <div class="mt-3">
        <label class="float-left"> <%= f.label 'difficulty' %> </label>
        <%= f.select :difficulty, difficulty_options_for_recipe, {}, {class: 'form-control'} %> 
    </div>

    <h1>Ingredients</h1>
    <div class="mt-3">
        <%= f.fields_for :ingredients do |ingredient_subform| %>
            <div class="mt-3">
                <label class="float-left"> <%= f.label 'unit' %> </label>
                <%= ingredient_subform.select :unit, unit_options_for_ingredients, {}, {class: 'form-control'} %> 
            </div>
            <div class="mt-3">
                <label class="float-left"> <%= f.label 'amount' %> </label>
                <%= ingredient_subform.text_field :amount, class: 'form-control' %> 
            </div>
        <% end %>
    </div>
   
    <div class="form-group mt-3">
        <%= f.submit %>
    </div>
<% end %>
